10 REM PASCAL'S TRIANGLE
15 DIM V(100)
20 INPUT "NUMBER OF ROWS"; N
25 FOR T = 1 TO N: PRINT " ",: NEXT T
30 PRINT 1: PRINT
35 LET V(1) = 1
40 FOR R = 2 TO N
45 PRINT: PRINT
50 FOR T = 1 TO (N - R): PRINT " ",: NEXT T
55 PRINT " ",
60 FOR I = R TO 1 STEP -1
65 LET V(I) = V(I) + V(I-1)
70 PRINT V(I), " ",
75 NEXT I
80 PRINT
85 NEXT R
90 END
